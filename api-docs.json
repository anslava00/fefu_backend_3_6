    "paths": {
        "\/api\/user": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "Display user data.",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/User"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/logout": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Save appeal submitted data",
                "responses": {
                    "200": {
                        "description": "Successfully logged out"
                    }
                }
            }
        },
        "\/api\/catalog\/product\/list": {
            "get": {
                "tags": [
                    "catalog"
                ],
                "summary": "Returning a list of products by slug.",
                "parameters": [
                    {
                        "name": "category_slug",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "search_query",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "sort_mode",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "filters",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "array"
                        }
                    },
                    {
                        "name": "filters.*",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "array"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/Product"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#\/components\/schemas\/PaginatorLinks"
                                        },
                                        "meta": {
                                            "$ref": "#\/components\/schemas\/PaginatorMeta"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Category error",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Error"
                                        },
                                        "errors": {
                                            "type": "string",
                                            "example": "error category"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/catalog\/product\/details": {
            "get": {
                "tags": [
                    "catalog"
                ],
                "summary": "Returning a product resource by the requested slug",
                "parameters": [
                    {
                        "name": "product_slug",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/Product"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Save appeal submitted data",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Email",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "slava@mail.ru"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Password",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "maxLength": 255,
                            "minLength": 1
                        },
                        "example": "Slava"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "access_token": {
                                            "type": "string",
                                            "example": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#\/components\/responses\/ErrorValidation"
                    }
                }
            }
        },
