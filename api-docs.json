                            "maxLength": 100
                        },
                        "example": "Slava user"
                    },
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "Phone",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "+79622201732"
